<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AnimeApp" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
    
    <style name="CardStyle" parent="">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    
    <style name="ChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/surface_dark</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
</resources>
